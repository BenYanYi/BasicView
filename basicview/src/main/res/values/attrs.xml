<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleProgress">
        <!--最大值-->
        <attr name="cpMaxSize" format="float" />
        <!--最小值-->
        <attr name="cpMinSize" format="float" />
        <!--起始位置（角度）-->
        <attr name="cpStartAngle" format="float" />
        <!--圆环大小-->
        <attr name="cpAngle" format="float" />
        <!--是否显示渐变进度条-->
        <attr name="cpIsShader" format="boolean" />
        <!--圆环画笔颜色-->
        <attr name="cpDefaultColor" format="color" />
        <!--圆环画笔线宽-->
        <attr name="cpDefaultWidth" format="float" />
        <!--背景画笔颜色-->
        <attr name="cpBgColor" format="color" />
        <!--背景画笔线宽-->
        <attr name="cpBgWidth" format="float" />
        <!--左边文字-->
        <attr name="cpLeftMsg" format="string" />
        <!--右边文字-->
        <attr name="cpRightMsg" format="string" />
        <!--是否显示小数-->
        <attr name="cpIsDecimal" format="boolean" />
        <!--等边-->
        <attr name="cpEquilateral" format="boolean" />
    </declare-styleable>
    <declare-styleable name="CircleView">
        <!--最大值-->
        <attr name="cvMaxSize" format="float" />
        <!--最小值-->
        <attr name="cvMinSize" format="float" />
        <!--起始位置（角度）-->
        <attr name="cvStartAngle" format="float" />
        <!--圆环大小-->
        <attr name="cvAngle" format="float" />
        <!--是否显示渐变进度条-->
        <attr name="cvIsShader" format="boolean" />
        <!--圆环画笔颜色-->
        <attr name="cvDefaultColor" format="color" />
        <!--圆环画笔线宽-->
        <attr name="cvDefaultWidth" format="float" />
        <!--背景画笔颜色-->
        <attr name="cvBgColor" format="color" />
        <!--背景画笔线宽-->
        <attr name="cvBgWidth" format="float" />
        <!--左边文字-->
        <attr name="cvLeftMsg" format="string" />
        <!--右边文字-->
        <attr name="cvRightMsg" format="string" />
        <!--文本内容-->
        <attr name="cvSize" format="float" />
        <!--文本大小-->
        <attr name="cvTextSize" format="dimension" />
        <!--文本颜色-->
        <attr name="cvTextColor" format="color" />
        <!--文本样式-->
        <attr name="cvTextStyle" format="enum">
            <!--加粗-->
            <enum name="bold" value="1" />
            <!--斜体-->
            <enum name="italic" value="2" />
            <!--下划线-->
            <enum name="underline" value="3" />
            <!--删除线-->
            <enum name="strike" value="4" />
            <!--正常-->
            <enum name="normal" value="5" />
        </attr>
        <!--是否显示小数-->
        <attr name="cvIsDecimal" format="boolean" />
        <!--等边-->
        <attr name="cvEquilateral" format="boolean" />
    </declare-styleable>
    <declare-styleable name="VerticalScrollTextView">
        <attr name="sleepTime" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="singleLine" format="boolean" />
        <attr name="scrollOrientation">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="VerticalScrollLayout">
        <attr name="VAnimDuration" format="integer" />
        <attr name="VSleepTime" format="integer" />
        <attr name="VIsCusDuration" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SmoothCheckBox">
        <!-- 动画持续时间 -->
        <attr name="BenDuration" format="integer" />
        <!-- 边框宽度 -->
        <attr name="BenStrikeWidth" format="dimension|reference" />
        <!-- 边框颜色 -->
        <attr name="BenBorderColor" format="color|reference" />
        <!-- 选中状态的颜色 -->
        <attr name="BenTrimColor" format="color|reference" />
        <!-- 对勾颜色 -->
        <attr name="BenTickColor" format="color|reference" />
        <!-- 对勾宽度 -->
        <attr name="BenTickWidth" format="dimension|reference" />
    </declare-styleable>
</resources>